                                        <input type="number" class="form-control" id="price" name="price" min="0" required
                                               value="{{ model.spot.price }}">
                                        {% for error in model.form.fields("price").errors %}
                                            <div class="text-danger">{{ error }}</div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="d-flex align-items-center p-3 bg-light rounded-3">
                                    <div class="fs-4 text-warning me-3">üèôÔ∏è</div>
                                    <div style="flex-grow: 1;">
                                        <label for="district" class="form-label fw-semibold">–†–∞–π–æ–Ω</label>
                                        <select class="form-select" id="district" name="district" required>
                                            <option value="" disabled>–í—ã–±–µ—Ä–∏—Ç–µ —Ä–∞–π–æ–Ω</option>
                                            {% for district in model.allDistricts %}
    {% if district.name != 'UNKNOWN' %}
                                                    <option value="{{ district.name }}"
                                                        {% if district.name == model.spot.district.name %}selected{% endif %}>
                                                        {{ district.district }}
